@using yasinCobanEticaret.Entity
@model yasinCobanEticaret.Models.OrderDetailsModel
@{
    ViewBag.Title = "Details";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mt-3">Sipariş Detay Bilgileri</h2>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Sipariş Durumu</dt>
                <dd class="col-sm-9">
                    @if (Model.OrderState == EnumOrderState.Waiting)
                    {
                        <div class="alert alert-warning" >Onay Bekliyor.</div>
                    }
                    else if (Model.OrderState == EnumOrderState.Completed)
                    {
                        <div class="alert alert-success">Sipariş Tamamlandı.</div>
                    }
                </dd>
                <dt class="col-sm-3">Sipariş Id'si</dt>
                <dd class="col-sm-9">@Model.OrderId</dd>
                <dt class="col-sm-3">Sipariş Numarası</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>
                <dt class="col-sm-3">Toplam Tutar</dt>
                <dd class="col-sm-9">
                    <i class="fa fa-try" aria-hidden="true"></i>
                    @Model.Total
                </dd>
                <dt class="col-sm-3">Sipariş Verilen Tarih</dt>
                <dd class="col-sm-9">@Model.OrderDate</dd>

                <dt class="col-sm-3">Sipariş Adresi</dt>
                <dd class="col-sm-9">
                    @Model.AdresBasligi
                    <hr />
                    @Model.Adres
                    <br />
                    @Model.Sehir - @Model.Semt - @Model.Mahalle
                    <br />
                    @Model.PostaKodu
                </dd>
                <dt class="col-sm-3">Siparişi Verilen Ürünler</dt>
                <dd class="col-sm-9">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Ürünün Resmi</th>
                                <th style="width: 45%;">Ürün İsmi</th>
                                <th>Miktar</th>
                                <th>Fiyat</th>
                                <th style="width: 10%;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Orderlines)
                            {
                                <tr>
                                    <td>
                                        <img src="/Upload/@item.Image" width="70" />
                                    </td>
                                    <td>
                                        @item.ProductName
                                    </td>
                                    <td>
                                        @item.Quantity
                                    </td>
                                    <td>
                                        <i class="fa fa-try" aria-hidden="true"></i>
                                        @item.Price
                                    </td>
                                    <td>
                                        <a href="/Home/Details/@item.ProductId" class="btn btn-primary btn-sm" target="_blank">
                                            <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                            Ürün Detayları
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </dd>
            </dl>
        </div>
    </div>
</div>
