@model IEnumerable<yasinCobanEticaret.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container pb-5">

    <h2 class="mt-3">Yeni Ürün</h2>
    <hr/>
    <p>
        @Html.ActionLink("Yeni Ürün", "Create", null, new { @class = "btn btn-success btn-sm" })
    </p>
    
    <table class="table table-bordered table-striped table-condensed table-hover">
        <tr>
            <th>
                <label class="control-label">Ürünün Resmi</label>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                <label class="control-label">Ana Sayfada mı?</label>
            </th>
            <th>
                <label class="control-label">Stokta mı?</label>
            </th>
            <th style="width: 140px;"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="/Upload/@item.Image" width="70"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.IsHome)
                    {
                        <label class="badge badge-success">
                            <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                            Evet
                        </label>
                    }
                    else
                    {
                        <label class="badge badge-danger">
                            <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                            Hayır
                        </label>
                    }
                </td>
                <td>
                    @if (item.IsApproved)
                    {
                        <label class="badge badge-success">
                            <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                            Evet
                        </label>
                    }
                    else
                    {
                        <label class="badge badge-danger">
                            <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                            Hayır
                        </label>
                    }
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new {id = item.Id},new {@class="btn btn-primary btn-sm"}) 
                    @Html.ActionLink("Sil", "Delete", new {id = item.Id}, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }

    </table>
</div>